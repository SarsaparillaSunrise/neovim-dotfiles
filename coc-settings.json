{
  "languageserver": {
    "bash": {
      "command": "~/.config/coc/extensions/node_modules/coc-sh/node_modules/.bin/bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "python": {
      "command": "ruff",
      "args": ["server", "--preview"],
      "filetypes": ["python"],
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "python", "elixir"],
  "suggest.noselect": true,
  "svelte.enable-ts-plugin": true,
  "elixir.pathToElixirLS": "/usr/bin/elixir-ls",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 3
    },

  ],
  "biome.bin": "/usr/bin/biome",
  "biome.requireConfiguration": false
}
